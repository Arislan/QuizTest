@model SimpleDataPager<QuizAuthorViewModel>
<table class="grid-view">
    <thead>
        <tr>
            <th class="size1">
                @Html.SortLink(x => x.Category)
            </th>
            <th class="size4">
                @Html.SortLink(x => x.Title)
            </th>
            <th class="size1">
                @Html.SortLink(x => x.Questions)
            </th>
            <th class="size4">
                Action
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="4"> 
                <div class="total-results">Total Results : @Model.TotalResults</div>
                @Html.GetPageMenu()
            </td>
        </tr>
    </tfoot>
    <tbody>
        @if (Model.Items.Count() > 0)
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Category</td>
                    <td class="left">@item.Title</td>
                    <td>@item.Questions</td>
                    <td>
                        <a href="/UserQuizzes/Edit?quizId=@item.Id" class="button">Edit</a>
                        <a href="/UserQuizzes/Remove?quizId=@item.Id" class="button">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No Results Found</td>
            </tr>
        }
    </tbody>
</table>
